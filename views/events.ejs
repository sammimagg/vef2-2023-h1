<section class="events">
  <h2 class="events__title">Viðburðir á næstunni</h2>
  <ul class="events__list">
    <% for (const event of events) { %>
      <li class="events__event">
        <a href="/<%= event.slug %>" class="events__eventLink"><%= event.name %></a>
        <p class="events__eventDescription"><%= event.description %></p>
        <% if (admin) { %>
          <p><a href="/admin/<%= event.slug %>" class="events__eventEdit">Uppfæra viðburð</a></p>
          <form action="/admin/delete/<%= event.id %>" method="POST" class="events__eventDelete">
            <button class="button button--small events__eventDeleteButton">Eyða viðburði</button>
          </form>
          <% } %>
      </li>
    <% } %>
  </ul>
  <p>Síða <%= paging.page %> af <%= paging.total %></p>
  <% if (paging.hasPrevious) { %>
    <a href="<%= admin ? '/admin' : '/' %>?page=<%= paging.previous %>" class="events__next">Fyrri viðburðir</a>
  <% } %>
  <% if (paging.hasNext) { %>
    <a href="<%= admin ? '/admin' : '/' %>?page=<%= paging.next %>" class="events__next">Næstu viðburðir</a>
  <% } %>

</section>
